    PRIMARY            = (Int64(1):<<:32)
    PROPAGATED         = (Int64(1):<<:33)
    EXPORT             = (Int64(1):<<:34)
    ANONYMOUS_TUPLE    = (Int64(1):<<:35)
    TUPLE              = (Int64(1):<<:36)
    DIRECT_AUTO_STORE  = (Int64(1):<<:37)
    BITFLAGS           = (Int64(1):<<:38)
