    REQUIRES_CLEANUP   = (Int64(1):<<:23)
    ABSTRACT           = (Int64(1):<<:24)
    FALLBACK           = (Int64(1):<<:25)
    AUGMENT            = (Int64(1):<<:26)
    PLACEHOLDER        = (Int64(1):<<:27)
