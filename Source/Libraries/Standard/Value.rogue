    method remove( query:(Function(Value)->Logical) )->Value
      local remove_keys : String[]
      local results : @[]

      forEach (key in keys)
        local v = this[ key ]
        if (query(v))
          ensure results
          ensure remove_keys
          remove_keys.add( key )
          results.add( v )
        endIf
      endForEach

      if (remove_keys is null) return UndefinedValue
      forEach (key in remove_keys) remove( key )
