$include Control/State

class Action : ProgressState<<Action,replace_action,end_action>>
  GLOBAL PROPERTIES
    global_timescale = 1.0

  PROPERTIES
    timescale = 1.0


  METHODS
    method on_draw
      noAction

    method on_draw_fg
      noAction

    method timescale->Real [override]
      return global_timescale * @timescale
endClass
