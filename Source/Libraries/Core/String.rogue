      while (ch)
        if (ch == '\\')
          if local next_ch = iterator.read_another
            which (next_ch)
              case 'b': ch = '\b'
              case 'e': ch = '\e'
              case 'f': ch = '\f'
              case 'n': ch = '\n'
              case 'r': ch = '\r'
              case 't': ch = '\t'
              case 'v': ch = '\v'
              case '0': ch = '\0'

