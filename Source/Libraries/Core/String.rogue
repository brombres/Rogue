                local value = 0
                block
                  loop 8
                    if local hex_ch = iterator.read_another
                      if (hex_ch.is_number(16)) value = (value * 16) + hex_ch.to_number(16)
                      elseIf (hex_ch == ']')    escapeBlock
                    endIf
