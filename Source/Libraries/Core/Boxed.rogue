class Boxed [abstract]
  METHODS
    method create_box<<$DataType>>( value:$DataType )->Boxed<<$DataType>>
      return Boxed<<$DataType>>( value )

    method size->Int32  [abstract]

    method to->String
      return description

endClass

class Boxed<<$DataType>>( value:$DataType ) : Boxed
  METHODS
    method description->String
      return value->String

    method size->Int32
      return native( "(%Ns%RogueInt32)(%Ns%RogueInt)sizeof($value)" )->Int32

    method to->$DataType
      return value

endClass

